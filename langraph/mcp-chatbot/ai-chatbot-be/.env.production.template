# =============================================================================
# AWS APP RUNNER ENVIRONMENT VARIABLES
# =============================================================================
# Copy these to AWS App Runner > Service > Configuration > Environment Variables
# DO NOT commit actual secrets to git!

# -----------------------------------------------------------------------------
# CORE APPLICATION
# -----------------------------------------------------------------------------
ENVIRONMENT=production
SECRET_KEY=<generate-a-strong-64-char-secret>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# DATABASE (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:5432/postgres
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_KEY=<anon-key>
SUPABASE_SERVICE_KEY=<service-role-key>
SUPABASE_STORAGE_BUCKET=docStorage

# -----------------------------------------------------------------------------
# AWS BEDROCK (Claude LLM)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# -----------------------------------------------------------------------------
# EMBEDDINGS
# -----------------------------------------------------------------------------
# Use HuggingFace (free, local) - model is pre-downloaded in Docker image
EMBEDDING_PROVIDER=huggingface

# -----------------------------------------------------------------------------
# EMAIL (Optional)
# -----------------------------------------------------------------------------
MAIL_USERNAME=<your-email>
MAIL_PASSWORD=<app-password>
MAIL_FROM=<your-email>
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=AI Chatbot
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# -----------------------------------------------------------------------------
# GOOGLE OAUTH (Optional)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_CLIENT_SECRET=<your-google-client-secret>
GOOGLE_REDIRECT_URI=https://<your-app-runner-url>/api/auth/google/callback

# -----------------------------------------------------------------------------
# LANGSMITH (Optional - for monitoring)
# -----------------------------------------------------------------------------
LANGSMITH_API_KEY=<your-langsmith-key>
LANGSMITH_PROJECT=ai-chatbot-production
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# CORS (Update with your Amplify domain)
# -----------------------------------------------------------------------------
# Set in app/core/environments/production.py:
# allowed_origins = ["https://your-app.amplifyapp.com", "https://your-custom-domain.com"]
